{
	"name": "nodify",
	"displayName": "nodify",
	"description": "",
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.22.0"
	},
	"extensionDependencies": ["ms-python.python"],
	"workspaces": ["packages/*", "webview-ui"],
	"categories": ["Programming Languages", "Other"],
	"activationEvents": ["onLanguage:python"],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "nodify.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "nodify.analyzePythonAST",
				"title": "Analyze Python AST"
			},
			{
				"command": "nodify.openWebview",
				"title": "Open Nodify Webview"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Python AST Analysis",
			"properties": {
				"nodify.pythonPath": {
					"type": "string",
					"default": "python",
					"description": "Path to Python interpreter"
				}
			}
		},
		"languages": [
			{
				"id": "python",
				"aliases": ["Python"],
				"extensions": [".py"],
				"configuration": "./language-configuration.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "bun run package",
		"compile": "bun run check-types && node esbuild.js",
		"watch": "npm-run-all -p watch:*",
		"watch:esbuild": "node esbuild.js --watch",
		"watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
		"package": "bun run build-webview && bun run check-types && node esbuild.js --production",
		"build-webview": "cd webview-ui && bun install && bun run build",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "bun run compile-tests && bun run compile",
		"check-types": "tsc --noEmit",
		"format": "bunx biome format --write .",
		"test": "vscode-test"
	},
	"dependencies": {
		"@ast-grep/napi": "^0.33.1",
		"openai": "^4.79.1",
		"vscode-languageclient": "^9.0.1",
		"zod": "^3.24.1"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/mocha": "^10.0.10",
		"@types/node": "20.x",
		"@types/vscode": "^1.96.0",
		"@vscode/test-cli": "^0.0.10",
		"@vscode/test-electron": "^2.4.1",
		"esbuild": "^0.24.0",
		"npm-run-all": "^4.1.5",
		"typescript": "^5.7.2"
	}
}
